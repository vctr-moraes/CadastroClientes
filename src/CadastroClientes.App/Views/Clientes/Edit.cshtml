@model CadastroClientes.App.Models.ClienteViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<hr/>
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>Dados do Cliente</h5>
            <hr/>
            <div class="form-group">
                <label asp-for="NomeFantasia" class="control-label"></label>
                <input asp-for="NomeFantasia" class="form-control"/>
                <span asp-validation-for="NomeFantasia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RazaoSocial" class="control-label"></label>
                <input asp-for="RazaoSocial" class="form-control"/>
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control"/>
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <br/>
            <h5>Endereço</h5>
            <hr/>
            <div class="form-group">
                <label asp-for="Endereco.Logradouro" class="control-label"></label>
                <input asp-for="Endereco.Logradouro" class="form-control"/>
                <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.Numero" class="control-label"></label>
                <input asp-for="Endereco.Numero" class="form-control"/>
                <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.Bairro" class="control-label"></label>
                <input asp-for="Endereco.Bairro" class="form-control"/>
                <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.Cidade" class="control-label"></label>
                <input asp-for="Endereco.Cidade" class="form-control"/>
                <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.Estado" class="control-label"></label>
                <input asp-for="Endereco.Estado" class="form-control"/>
                <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.Pais" class="control-label"></label>
                <input asp-for="Endereco.Pais" class="form-control"/>
                <span asp-validation-for="Endereco.Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.Cep" class="control-label"></label>
                <input asp-for="Endereco.Cep" class="form-control"/>
                <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-8">
            <h5>Contatos</h5>
            <hr/>
            <div class="form-group">
                <label asp-for="@Model.Contato.DescricaoContato" class="control-label"></label>
                <textarea asp-for="@Model.Contato.DescricaoContato" class="form-control"></textarea>
                <span asp-validation-for="@Model.Contato.DescricaoContato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Contato.NomeRepresentante" class="control-label"></label>
                <input asp-for="@Model.Contato.NomeRepresentante" class="form-control"/>
                <span asp-validation-for="@Model.Contato.NomeRepresentante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Contato.Cargo" class="control-label"></label>
                <input asp-for="@Model.Contato.Cargo" class="form-control"/>
                <span asp-validation-for="@Model.Contato.Cargo" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="@Model.Contato.EmailRepresentante" class="control-label"></label>
                    <input asp-for="@Model.Contato.EmailRepresentante" type="email" class="form-control"/>
                    <span asp-validation-for="@Model.Contato.EmailRepresentante" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="@Model.Contato.TelefoneRepresentante" class="control-label"></label>
                    <input asp-for="@Model.Contato.TelefoneRepresentante" type="tel" class="form-control"/>
                    <span asp-validation-for="@Model.Contato.TelefoneRepresentante" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="@Model.Contato.EmailComercial" class="control-label"></label>
                    <input asp-for="@Model.Contato.EmailComercial" type="email" class="form-control"/>
                    <span asp-validation-for="@Model.Contato.EmailComercial" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="@Model.Contato.TelefoneComercial" class="control-label"></label>
                    <input asp-for="@Model.Contato.TelefoneComercial" type="tel" class="form-control"/>
                    <span asp-validation-for="@Model.Contato.TelefoneComercial" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="Id"/>
    <br/>
    <div class="form-group">
        <a class="btn btn-secondary" asp-action="Index"><i class="fa-solid fa-reply"></i> Voltar</a>
        <button type="submit" class="btn btn-primary"><i class="fa-regular fa-floppy-disk"></i> Salvar</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
