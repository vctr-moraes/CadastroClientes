@model IEnumerable<CadastroClientes.App.Models.ClienteViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa-regular fa-square-plus"></i> Cadastrar Novo</a>
</p>
<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cnpj)
        </th>
        <th>
            Ações
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i
                        class="fa-regular fa-pen-to-square"></i> Editar</a>
                <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id"><i
                        class="fa-regular fa-eye"></i> Detalhes</a>
                <a class="btn btn-outline-secondary btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i
                        class="fa-regular fa-trash-can"></i> Deletar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
